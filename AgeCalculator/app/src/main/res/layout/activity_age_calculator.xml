<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AgeCalculator"
    android:background="@android:color/darker_gray">

    <TextView
        android:id="@+id/tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter your birth date(In numbers):"
        android:textSize="20sp"
        android:fontFamily="sans-serif"
        />
    
    <EditText 
        android:id="@+id/et_year"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
        android:hint="Enter Year"
        android:layout_marginTop="53sp"
        android:layout_below="@+id/tv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/white"
        android:inputType="number"/>
    
    
     
     <EditText 
        android:id="@+id/et_month"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
         android:hint="Enter Month"
         android:layout_marginTop="19dp"
         android:background="@android:color/white"
         android:inputType="number"
         android:layout_below="@+id/et_year"
         android:layout_alignParentLeft="true"
         android:layout_alignParentStart="true" />
    
      
      
      <EditText 
        android:id="@+id/et_day"
        android:layout_width="fill_parent"
        android:layout_height="50sp"
          android:hint="Enter day"
          android:background="@android:color/white"
          android:inputType="number"
          android:layout_centerVertical="true"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true" />
    
      
      
    
   
    
    <Button
        android:id="@+id/bt"
        android:layout_height="60sp"
        android:layout_width="250sp"
        android:text="Calculate"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/white"
        android:layout_marginTop="43sp"
        android:layout_below="@+id/et_day"
        android:layout_centerHorizontal="true" />
    
    <TextView 
        android:id="@+id/tv_age"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"

        android:layout_marginTop="11dp"
        android:textAlignment="center"

        android:textSize="25sp"
        android:fontFamily="monospace"
        android:layout_below="@+id/bt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
